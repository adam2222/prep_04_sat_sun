
<br><br>
<%= @link.title %>
<br>
<%= @link.url %>
<br>
<a href="<%= links_url %>">Links</a>
<br>
<a href="<%= edit_link_url(@link) %>">Edit Link</a>
<br>

<h2>Comments</h2>
<ul>

<% @link.comments.each do |comment| %>
  <li>
    <%= comment.body  %>
    <%= button_to "Remove Comment", comment_url(comment), method: :delete %>
  </li>
<% end %>

</ul>

<form class="" action="<%= comments_url %>" method="post"> Add Comment </br>
  <label for="Comment">Comment</label>
  <input type="text" name="comment[body]" id="Comment">

  <input type="submit" value="Add Comment">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <input type="hidden" name="comment[link_id]" value="<%= @link.id %>">


</form>
